pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS=credentials('dockerhub')
    }

    stages {
        stage('SCM_Checkout') {
            steps {
                git url: 'https://github.com/deepikaarjunan22/devops-build.git',
                    branch: "${env.BRANCH_NAME}"
            }
        }
        stage ('Set environment') {
            steps {
                script {
                    if (env.BRANCH_NAME == 'main') {
                        env.ENV = 'prod'
                    } else {
                        env.ENV = 'dev'
                    }
                }
            }
        }
        
        stage ('docker login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage ('build the docker image') {
            steps {
                sh 'cd build && chmod 755 build.sh'
                sh "cd build && ./build.sh ${env.ENV}"
            }
        }
        stage ('deploy the docker image') {
            steps {
                sh 'cd build && chmod 755 deploy.sh'
                sh "cd build && ./deploy.sh ${env.ENV}"
            }
        }
        stage ('push the docker image') {
            steps {
                sh "docker tag deepikaarjunan/${env.ENV}-repo:${BUILD_NUMBER} deepikaarjunan/${env.ENV}-repo:latest"
                sh "docker push deepikaarjunan/${env.ENV}-repo:latest"
            }
        }
    }
}

